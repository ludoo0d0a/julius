<?xml version="1.0" encoding="utf-8"?>
<!-- Static frame matching phone Sphere theme - listening/active state. Brighter glow, pink accent -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark background matching phone -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0F172A" />
            <size android:width="480dp" android:height="360dp" />
        </shape>
    </item>
    <!-- Outer glow (stronger when active) -->
    <item android:left="80dp" android:right="80dp" android:top="40dp" android:bottom="40dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="160dp"
                android:startColor="#50EC4899"
                android:endColor="#000F172A" />
        </shape>
    </item>
    <!-- Inner glow ring -->
    <item android:left="140dp" android:right="140dp" android:top="100dp" android:bottom="100dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="100dp"
                android:startColor="#606366F1"
                android:endColor="#000F172A" />
        </shape>
    </item>
    <!-- Sphere core (brighter, pink tint) -->
    <item android:left="170dp" android:right="170dp" android:top="130dp" android:bottom="130dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="70dp"
                android:startColor="#C0FFFFFF"
                android:endColor="#806366F1" />
        </shape>
    </item>
</layer-list>
